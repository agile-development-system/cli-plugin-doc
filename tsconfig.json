{
    // 编译选项
    "compilerOptions": {
        "allowJs": true,
        "declaration": true,
        "declarationDir": "lib/types",
        "outDir": "lib",
        "target": "ESNext",
        "module": "commonjs",
        "moduleResolution":"node",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true
    },
    "include": ["src"]
}
